{
  "name": "dorai-ui",
  "version": "0.0.0",
  "description": "Accessible, unstyled, and fully functional react component library for building better design systems",
  "author": "watife",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "license": "MIT",
  "repository": "watife/dorai-ui",
  "scripts": {
    "build": "yarn build:packages",
    "build:packages": "preconstruct build",
    "lint": "eslint .",
    "test": "jest",
    "commit": "cz",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "yarn build-storybook && gh-pages -d storybook-static",
    "semantic-release": "semantic-release --branches main",
    "publish:packages": "auto shipit",
    "release": "yarn build && yarn publish:packages"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.36.5",
    "@auto-it/conventional-commits": "^10.36.5",
    "@auto-it/first-time-contributor": "^10.36.5",
    "@auto-it/released": "^10.36.5",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "auto": "^10.32.5",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.5",
    "gh-pages": "^3.2.3",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.5.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "auto": {
    "plugins": [
      "@auto-it/npm",
      "@auto-it/all-contributors",
      "@auto-it/conventional-commits",
      "@auto-it/first-time-contributor",
      "@auto-it/released"
    ],
    "labels": [
      {
        "name": "minor",
        "changelogTitle": "ðŸš€ Feature",
        "description": "Increment the minor version when merged",
        "releaseType": "minor",
        "color": "#F1A60E",
        "overwrite": true
      }
    ]
  }
}
