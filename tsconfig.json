{
  "include": [
    "packages/**/*.ts",
    "packages/accordion/doc/accordion.stories.tsx",
    "./jest-setup.ts"
  ],
  "exclude": ["node_modules", "stories", ".storybook", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNEXT",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
